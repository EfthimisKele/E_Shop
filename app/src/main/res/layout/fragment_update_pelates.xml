<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".UpdatePelates">

    //LinearLayout με 4 EditText και ένα κουμπί
    //Πατωντας ο χρηστης το κουμπί θα παιρνει τις τιμες
    //απο τα 4 EditText και θα τα τοποθετει στον κατάλληλο πινακα
    <TextView
        android:id="@+id/txtUpdate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="24dp"
        android:text="Επεξεργασία Λογαριασμού"
        android:textAlignment="center"
        android:textSize="25dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/update_text1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Δώσε id">
    </EditText>

    <EditText
        android:id="@+id/update_text2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Δώσε όνομα">
    </EditText>

    <EditText
        android:id="@+id/update_text3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Δώσε επίθετο">
    </EditText>

    <EditText
        android:id="@+id/update_text4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Δώσε πόλη"
        android:inputType="textPersonName">
    </EditText>

    <Button
        android:id="@+id/updateuser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Επεξεργασία"
        android:layout_gravity="center"
        android:focusableInTouchMode="true">
    </Button>
</LinearLayout>